<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_personal_center_user_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/user_center_space_data_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp" 
            >

            <ImageView
                android:id="@+id/img_personal_data_headImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_1_image" 
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_personal_data_headImage"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_personal_data_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Fiona"
                        android:maxWidth="90dp"
                        android:singleLine="true"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_personal_data_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/female" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_personal_data_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxWidth="115dp"
                    android:text="UID:10000"
                    android:singleLine="true"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/txt_personal_data_genderArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxWidth="115dp"
                    android:text="北京/朝阳 "
                    android:singleLine="true"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_personal_data_updateData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_button_bg_selecter"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/edit"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/txt_personal_data_introduction"
                style="@style/personalCenter_textview_black_16"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:text="简介:让我介绍我自己，让我介绍我自己..."
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/img_more" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/user_center_data_count_bg"
        android:orientation="horizontal" >


        <LinearLayout
            android:id="@+id/layout_personal_data_zhimaSpace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bt_bg_selecter"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txt_personal_data_zhimaSpace"
                style="@style/personalCenter_textview_black_16"
                android:text="芝麻空间"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_personal_data_zhimaSpaceCount"
                style="@style/personalCenter_textview_black_16"
                android:layout_marginTop="2dp"
                android:text="0"
                android:textColor="@color/blue_deep"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/layout_personal_data_photograph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bt_bg_selecter"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txt_personal_data_photograph"
                style="@style/personalCenter_textview_black_16"
                android:text="照片"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_personal_data_photographCount"
                style="@style/personalCenter_textview_black_16"
                android:layout_marginTop="2dp"
                android:text="0"
                android:textColor="@color/blue_deep"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/layout_personal_data_inBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bt_bg_selecter"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txt_personal_data_inBox"
                style="@style/personalCenter_textview_black_16"
                android:text="格子铺"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_personal_data_inBoxCount"
                style="@style/personalCenter_textview_black_16"
                android:layout_marginTop="2dp"
                android:text="0"
                android:textColor="@color/blue_deep"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/layout_personal_data_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/default_bt_bg_selecter"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txt_personal_data_friend"
                style="@style/personalCenter_textview_black_16"
                android:text="好友"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_personal_data_friendCount"
                style="@style/personalCenter_textview_black_16"
                android:layout_marginTop="2dp"
                android:text="0"
                android:textColor="@color/blue_deep"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/txt_personal_data_diaryCount"
        style="@style/personalCenter_textview_black_16"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="共0条日志" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/txt_personal_data_noResult"
        style="@style/personalCenter_textview_black_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:text="暂无结果"
        android:textSize="@dimen/text_size_18"
        android:background="@color/main_bg"
        android:textColor="@color/gray" 
        android:visibility="gone"
        />

</LinearLayout>