<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar_left_type1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_titlebar_leftButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/topbar_button_bg_selecter"
        android:gravity="center"
        android:paddingTop="2dp" >

        <ImageView
            android:id="@+id/imgbtn_titlebar_leftButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/topbar_button_bg_selecter"
            android:src="@drawable/come_back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_topbar_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        >

        <TextView
            android:id="@+id/txt_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="商业空间检索"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/left_txt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="2dp"
            android:src="@drawable/drop_down_icon"
            android:visibility="gone" 
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_retrieval_edit_box"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:paddingTop="3dp"
        android:visibility="gone" >

        <include layout="@layout/retrieval_edittext_box" />
    </RelativeLayout>

</LinearLayout>