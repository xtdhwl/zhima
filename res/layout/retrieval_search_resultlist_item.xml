<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_white_gray_selet"
    android:orientation="horizontal"
    android:padding="10dp" 
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/img_retrieval_resultItem_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="3dp"
        android:background="@drawable/image_select_bg"
        android:scaleType="fitXY"
        android:src="@drawable/default_image" />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2.7"
        android:layout_marginLeft="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_retrieval_resultItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_18" 
            android:text="阿桑劲儿啊 破二夫人"
            />

        <TextView
            android:id="@+id/txt_retrieval_resultItem_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/dust_grey"
            android:textSize="@dimen/text_size_16" 
            android:text="爱死人竟然 生日费劲儿他热爱饿死人特瑞"
            />
        <TextView
            android:id="@+id/txt_retrieval_resultItem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/dust_grey"
            android:textSize="@dimen/text_size_16" 
            android:text="爱死人竟然 生日费劲儿他热爱饿死人特瑞"
            />
    </LinearLayout>

    <TextView
            android:id="@+id/txt_retrieval_resultItem_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:singleLine="true"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_14" 
            android:gravity="right"
            android:layout_gravity="bottom"
            android:text="200m"
            android:visibility="gone"
            />
    
    </LinearLayout>
    
</LinearLayout>