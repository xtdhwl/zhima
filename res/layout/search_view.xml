<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/textfield_activated_holo_dark" >

        <LinearLayout
            android:id="@+id/layout_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_icon_h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="搜索"
                android:textColor="#55ffffff" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/transparent"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/white_color" />

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/topbar_button_bg_selecter"
            android:src="@drawable/search_delete" />
    </RelativeLayout>


</LinearLayout>